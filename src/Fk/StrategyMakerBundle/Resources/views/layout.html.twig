<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Strategy Maker{% endblock %}</title>
    <!-- Bootstrap -->
    <link href="{{ asset('bundles/fkstrategymaker/css/bootstrap.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('bundles/fkstrategymaker/css/bootstrap-responsive.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('bundles/fkstrategymaker/css/style.css') }}" rel="stylesheet" media="screen">
    {% block stylesheets %}
    {% endblock %}
   
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script type="text/javascript">
    $(document).ready(function(){
      $(".form-actions form").hide();
      
      $(".form-actions").mouseover(function(){
        $(this).find("form").show();
      });
      
      $(".form-actions").mouseout(function(){
        $(this).find("form").hide();
      });
    });
    </script>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="{{ path('strategy') }}">Strategy Maker &TRADE;</a>
          <div class="nav-collapse collapse">
            <!--
            <ul class="nav">
              {% set currentPath = app.request.requesturi %}
              <li class="{% if '/strategy/' in currentPath %}active{% endif %}"><a href="{{ path('strategy') }}">Strategies</a></li>
              <li class="{% if '/goal/' in currentPath %}active{% endif %}"><a href="{{ path('goal') }}">Goals</a></li>
              <li class="{% if '/action/' in currentPath %}active{% endif %}"><a href="{{ path('action') }}">Actions</a></li>
            </ul>
            -->
          </div><!--/.nav-collapse -->
        </div>
      </div>    
    </div>
    <div class="container">
    {% block content %}
    {% endblock %}
    </div>
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ asset('bundles/fkstrategymaker/js/bootstrap.min.js') }}"></script>
    {% block javascripts %}
    {% endblock %}
  </body>
</html>