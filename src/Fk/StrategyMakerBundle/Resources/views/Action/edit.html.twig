{% extends "FkStrategyMakerBundle::layout.html.twig" %}
{% block content %}
<h1>Edit Action</h1>

<div class="dark-block">
  <form id="edit_form" action="{{ path('action_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
      {{ form_widget(edit_form) }}
      {{ form_widget(delete_form) }}
      <div class="form-actions">
          <button class="btn btn-primary btn-medium" type="submit">Save</button>
          <button class="btn btn-danger btn-medium" onclick="$('#edit_form').attr('action','{{ path('action_delete', { 'id': entity.id }) }}'); return true;" type="submit">Delete</button>
          <a class="btn btn-link btn-medium" href="{{ path('strategy_show', {'id': entity.getGoal().getStrategy().getId()}) }}">Cancel</a>
      </div>
  </form>
</div>
{% endblock %}